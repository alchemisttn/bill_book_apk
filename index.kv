<MyButton@MDFlatButton>:
    canvas.before:
        Color:
            rgba:1,0,1,.3
        RoundedRectangle:
            size:self.size
            pos:self.pos
    canvas.after:
        Color:
            rgba:1,0,1,.3
        RoundedRectangle:
            size:self.size
            pos:self.pos

    pos_hint:{'center_x':.5, 'center_y':.5}

<ApprovalCard@BoxLayout>:
    spacing:10
    pos_hint:{'center_x':.5}
    size_hint:None, None
    width:self.minimum_width
    height:self.minimum_height+dp(20)
    padding:[10,0,10,0]
    canvas.before:
        Color:
            rgba:1,0,1,.5
        RoundedRectangle:
            size:self.size
            pos:self.pos
    Label:
        text:'username'
        size_hint:None,None
#        size:self.texture_size
        width:self.texture_size[0]+dp(10)
        height:self.texture_size[1]+dp(5)
        canvas.before:
            Color:
                rgba:1,0,1,.3
            RoundedRectangle:
                size:self.size
                pos:self.pos
        pos_hint:{'center_y':.5}

    Label:
        text:'product'
        size_hint:None,None
        width:self.texture_size[0]+dp(10)
        height:self.texture_size[1]+dp(5)
        canvas.before:
            Color:
                rgba:1,0,1,.3
            RoundedRectangle:
                size:self.size
                pos:self.pos
        pos_hint:{'center_y':.5}
    Label:
        text:'price'
        size_hint:None,None
        width:self.texture_size[0]+dp(10)
        height:self.texture_size[1]+dp(5)
        canvas.before:
            Color:
                rgba:1,0,1,.3
            RoundedRectangle:
                size:self.size
                pos:self.pos
        pos_hint:{'center_y':.5}

    MDRaisedButton:
        text:'Approve'
        pos_hint:{'center_y':.5}


<Index>:
    BoxLayout:
        orientation:'vertical'
        Widget:
            size_hint_y:.1
        BoxLayout:
            size_hint_y:None
            height:self.minimum_height
            spacing:20
            pos_hint:{'center_x':.5, 'center_y':.5}
            orientation:'vertical'
            MyButton:
                text:'add product'
            MyButton:
                text:'purchase history'
            MyButton:
                text:'Generate Bill'
        Widget:
            size_hint_y:.1
        ScrollView:
            BoxLayout:
                size_hint_y:None
                height:self.minimum_height
                spacing:10
                orientation:'vertical'
                ApprovalCard:
                ApprovalCard:
                ApprovalCard:
                ApprovalCard:
                ApprovalCard:
                ApprovalCard:
                ApprovalCard:
                ApprovalCard:
                ApprovalCard:
                ApprovalCard:
                ApprovalCard:
                ApprovalCard:
    MDIconButton:
        md_bg_color:[1,0,1,.5]
        color:[0,0,0]
        padding:10
        icon:'arrow-right'
        pos_hint:{'right':.9, 'top':.1}
        padding:15
        on_release:app.root.current='add_product_page'