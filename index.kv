<MyButton>:
    canvas.before:
        Color:
            rgba:1,0,1,.3
        RoundedRectangle:
            size:self.size
            pos:self.pos
    canvas.after:
        Color:
            rgba:1,0,1,.3
        RoundedRectangle:
            size:self.size
            pos:self.pos

    pos_hint:{'center_x':.5, 'center_y':.5}

<ApprovalCard>:
    spacing:10
    pos_hint:{'center_x':.5}
    size_hint:None, None
    width:self.minimum_width
    height:self.minimum_height+dp(20)
    padding:[10,0,10,0]
    canvas.before:
        Color:
            rgba:1,0,1,.5
        RoundedRectangle:
            size:self.size
            pos:self.pos
    Label:
        text:root.username
        size_hint:None,None
        width:self.texture_size[0]+dp(10)
        height:self.texture_size[1]+dp(5)
        canvas.before:
            Color:
                rgba:1,0,1,.3
            RoundedRectangle:
                size:self.size
                pos:self.pos
        pos_hint:{'center_y':.5}

    Label:
        text:root.product
        size_hint:None,None
        width:self.texture_size[0]+dp(10)
        height:self.texture_size[1]+dp(5)
        canvas.before:
            Color:
                rgba:1,0,1,.3
            RoundedRectangle:
                size:self.size
                pos:self.pos
        pos_hint:{'center_y':.5}
    Label:
        text:root.price
        size_hint:None,None
        width:self.texture_size[0]+dp(10)
        height:self.texture_size[1]+dp(5)
        canvas.before:
            Color:
                rgba:1,0,1,.3
            RoundedRectangle:
                size:self.size
                pos:self.pos
        pos_hint:{'center_y':.5}

    MDRaisedButton:
        text:root.button_text
        pos_hint:{'center_y':.5}
        on_press:root.approve_data()



<Index>:
    BoxLayout:
        orientation:'vertical'
        Widget:
            size_hint_y:.1
        BoxLayout:
            size_hint_y:None
            height:self.minimum_height
            spacing:20
            pos_hint:{'center_x':.5, 'center_y':.5}
            orientation:'vertical'
            MyButton:
                text:'add product'
                on_release:app.root.current = 'add_product_page'
            MyButton:
                text:'purchase history'
                on_release:app.root.current = 'history_index_page'
            MyButton:
                text:'Generate Bill'
                on_release:app.root.current = 'bill_page'
        Widget:
            size_hint_y:.1
        ScrollView:
            BoxLayout:
                id:approval_card_holder
                size_hint_y:None
                height:self.minimum_height
                spacing:10
                orientation:'vertical'
