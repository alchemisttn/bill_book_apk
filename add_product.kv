<AddProduct>:
    BoxLayout:
        orientation:'vertical'
        size_hint:.9, None
        pos_hint:{'center_x':.5, 'center_y':.5}
        spacing:10
        height:self.minimum_height
        MDTextField:
            id:product
            hint_text:'product'
            halign:'center'
        MDTextField:
            id:description
            hint_text:'description'
            multiline:True
            halign:'center'
        BoxLayout:
            size_hint:None,None
            orientation:'vertical'
            spacing:20
            pos_hint:{'center_x':.5}
            MDIcon:
                pos_hint:{'center_x':.5}
                color:[1,0,1,.5]
                size_hint:None,None
                icon:'currency-rupee'
            MDTextField:
                id:price
                pos_hint:{'center_x':.5}
                size_hint:None,None
                mode:'rectangle'
                halign:'center'
    MDFillRoundFlatIconButton:
        md_bg_color:[1,0,1,.5]
        color:[0,0,0]
        padding:10
        text:'checkout'
        icon:'arrow-right'
        pos_hint:{'right':.9, 'top':.1}
        padding:15
        on_release:root.check_out()
    MDIconButton:
        md_bg_color:[1,0,1,.5]
        color:[0,0,0]
        padding:10
        icon:'arrow-left'
        pos_hint:{'top':.1,'right':.15}
        padding:15
        on_release:app.root.current=root.manager.previous()

