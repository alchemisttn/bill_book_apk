<HistoryLastSumCard@BoxLayout>:
    spacing:15
    pos_hint:{'center_x':.5}
    size_hint:None, None
    width:self.minimum_width
    height:self.minimum_height+dp(20)
    padding:[10,0,10,0]
    canvas.before:
        Color:
            rgba:1,0,1,.5
        RoundedRectangle:
            size:self.size
            pos:self.pos

    Label:
        text:'Total'
        size_hint:None,None
        width:self.texture_size[0]+dp(10)
        height:self.texture_size[1]+dp(5)
        canvas.before:
            Color:
                rgba:1,0,1,.3
            RoundedRectangle:
                size:self.size
                pos:self.pos
        pos_hint:{'center_y':.5}
    Label:
        text:'Price'
        size_hint:None,None
        width:self.texture_size[0]+dp(10)
        height:self.texture_size[1]+dp(5)
        canvas.before:
            Color:
                rgba:1,0,1,.3
            RoundedRectangle:
                size:self.size
                pos:self.pos
        pos_hint:{'center_y':.5}


