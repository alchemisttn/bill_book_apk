<HeadingLabel>:
    text:root.text
    padding:[0,0,0,15]

<BillCard>:
    spacing:15
    pos_hint:{'center_x':.5}
    size_hint:None, None
    width:self.minimum_width
    height:self.minimum_height+dp(20)
    padding:[10,0,10,0]
    canvas.before:
        Color:
            rgba:1,0,1,.5
        RoundedRectangle:
            size:self.size
            pos:self.pos

    Label:
        text:root.user_name
        size_hint:None,None
        width:self.texture_size[0]+dp(10)
        height:self.texture_size[1]+dp(5)
        canvas.before:
            Color:
                rgba:1,0,1,.3
            RoundedRectangle:
                size:self.size
                pos:self.pos
        pos_hint:{'center_y':.5}
    Widget:
        size_hint_x:None
        width:120
    Label:
        text:root.user_sum
        size_hint:None,None
        width:self.texture_size[0]+dp(10)
        height:self.texture_size[1]+dp(5)
        canvas.before:
            Color:
                rgba:1,0,1,.3
            RoundedRectangle:
                size:self.size
                pos:self.pos
        pos_hint:{'center_y':.5}


<Bill>:
    ScrollView:
        pos_hint:{'center_y':.5}
        BoxLayout:
            id:bill_card_holder
            padding:[0,'30dp',0,0]
            size_hint_y:None
            height:self.minimum_height
            spacing:10
            orientation:'vertical'
            pos_hint:{'center_y':.5}

    MDIconButton:
        md_bg_color:[1,0,1,.5]
        color:[0,0,0]
        padding:10
        icon:'arrow-left'
        pos_hint:{'right':.2, 'top':.1}
        padding:15
        on_release:app.root.current=app.root.previous()
